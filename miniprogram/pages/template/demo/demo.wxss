page{
	height: 100%;
	background: #fff;
	color: #333;
  	display: flex;
  	flex-direction: column;
 	font: normal 30rpx/1.68 -apple-system-font, 'Helvetica Neue', Helvetica, 'Microsoft YaHei', sans-serif;
}
.sub1 {
  display: block;
  float: left;
  width: 100rpx;
  height: 100rpx;
  margin-left: 400rpx;
  margin-top: -140px;
  z-index: 99;
  border-radius: 50%;
}
.container {
	flex: 1;
  	display: flex;
  	flex-direction: column;
 	box-sizing: border-box;
}
.container-fill{
	height: 100%;
	overflow: hidden;
}
.scroll-fullpage{
	height: 100%;
	transition: all 0.3s;
}
.section{
	height: 100%;
}
.section .section-i {
  width: 250rpx;
  height: 60rpx;
  margin: 70rpx 50rpx 0 60rpx;
  
}
.section-1 {
  width: 500rpx;
  height: 280rpx;
  margin-top: 10rpx;
  margin-left: 100rpx;
}
.active .section-s {
  	height: 100%;
  background: url(https://fanghaoran.xyz/images/beijing.jpg) ;
  background-size: 100% 100%;
  animation: myfirst 1s;
}
.active .section-i,.active .section-1, {
  animation: mymove 0.8s;
}
.section-maintitle{
	display: block;
	text-align: center;
	font-size: 40rpx;
	color: #333;
	font-weight: bold;
	letter-spacing: 10rpx;
}
.section-subtitle{
	display: block;
	text-align: center;
	font-size: 40rpx;
	color: #fff;
	letter-spacing: 10rpx;
}
.active .section-maintitle,
.active .section-subtitle{
	animation: myfirst1 1.4s;
}
.section-2 {
  width: 500rpx;
  height: 400rpx;
  display: block;
  margin: -50px auto;
}
.active .section-2 {
  animation:myfirst2 2s linear 1s ; 
}
.sec {
  margin-top: 100rpx;
  margin-bottom: 100rpx;
}
.section-3,.section-4{
  display: flex;
  width: 200rpx;
  height: 200rpx;
  margin-left:15%;
  margin-top: 70rpx;
  float: left;
}
.active .section-3 {
  animation:myfirst3 2s; 
}
.active .section-4 {
  animation:myfirst4 2s;
}
.addTime {
  font-size: 40rpx;
  display: block;
  text-align: center;
}
.map {
  width: 90%;
  height: 300rpx;
  margin:30rpx auto;
}
.section-b {
  width: 100%;
  height: 60%;
}
.section-n {
  width: 100%;
  margin-top: -150px;
}

.bbb {
  width: 100%;
  height: 80rpx;
  color: white;
  text-align: center;
  background-color: red;
  font-size: 14px;
}
@keyframes mymove{
	from {
		transform: translateY(-400rpx) scale(0.5) rotateY(90deg);
	}
	to {
		transform: translateY(0) scale(1) rotateY(0);
	}
}
@keyframes myfirst{
	from {
		background-size: 110% 110%;
	}
	to {
		background-size: 100% 100%;
	}
}
@keyframes myfirst1{
	from {
		font-size:0rpx;
	}
	to {
		font-size: 40rpx;
	}
}
@keyframes myfirst2{
	from {
		-webkit-transform:perspective(400px) rotateY(360deg);
	}
	to {
		-webkit-transform:perspective(400px) rotateY(0deg);
	}
}
@keyframes myfirst3{
	from {
		margin-top: -200rpx;
	}
	to {
		margin-top: 70rpx;
	}
}
@keyframes myfirst4{
	from {
		margin-top: 700rpx;
	}
	to {
		margin-top: 70rpx;
	}
}
